{% set title = 'TEst' %}
{% extends "layout.njk" %}

{% block body %}
<main class="">
  
<div class="bg-base-100">
  
    
  
  <h2 class="font-bold text-4xl text-center pt-8">Gypsy Poker</h2>
  <p class="mb-4 text-center">Texas Hold 'em</p>
  <div class="flex justify-center">
    <div class="card w-96 bg-base-300 shadow-xl">
      <div class="card-body">
        <h2 class="card-title">Enter your name to join a table.</h2>
        <form class="form-control shadow-md rounded px-2 pt-6 pb-8 mb-4" action="/joinGame" method="POST">
          <div class="mb-4">
            <label class="block text-gray-300 text-sm font-bold mb-2" for="firstName">
              Name
            </label>
            <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" name="firstName" id="firstName" type="text" placeholder="enter your name" value="{{user.firstName}}">
          </div>
          {% include 'views/table-list.njk'%}
        </form>
        <div class="card-actions justify-end">
          <button class="btn btn-primary">Top-Up Chips</button>
        </div>
      </div>
    </div>
  </div> 
  
</div>



</main>
{% endblock %}
